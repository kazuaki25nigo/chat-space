.main-ber
  .main-ber__chat-main__group-info
    .main-ber__chat-main__group-info__chat-header-left-box
      .main-ber__chat-main__group-info__chat-header-left-box__chat-header-name 
        = @group.name
      .main-ber__chat-main__group-info__chat-header-left-box__chat-header-member 
        - @group.group_users.each do |group_user|
          = group_user.user.name
    .main-ber__chat-main__group-info__chat-header-edit-btn
      = link_to "edit", edit_group_path(@group), class: "btn"

    -# _message.html.hamlへ飛ばしてる
  .messages
    = render @messages    

  .main-ber__chat-main__message-form
    .main-ber__chat-main__message-form__box
      .main-ber__chat-main__message-form__box__text-box
        .form
          = form_for [@group, @message] do |f|
            = f.text_field :content, class: 'form__message', placeholder: 'type a message'
            .form__mask
              = f.label :image, class: 'form__mask__image' do
                = icon('fas', 'image', class: 'icon')
                = f.file_field :image, class: 'hidden'
            = f.submit 'Send', class: 'form__submit'
        
        
