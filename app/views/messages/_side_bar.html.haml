-# ＜サイドバー＞
.side-ber
  .side-ber__user-name
    .side-ber__user-name__side-box__user-name
      %p.side-ber__user-name__side-box__user-name__name 
        = current_user.name
      %ul.menu
        %li.edit
          = link_to new_group_path do
            = icon('far', 'edit', class: 'icon_edit')
        %li.config
          =link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon_cog')

  .side-ber__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message

